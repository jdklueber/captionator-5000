// Storage rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read;
      allow write: if
      request.auth != null &&
      request.resource.size < 20 * 1024 * 1024 && //20MB
      request.resource.contentType.matches('image/.*')
    }
  }
}